{
  "name": "ntg-design-system",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:js": "vite build",
    "build:css:theme:ntg": "postcss src/themes/theme-ntg.css -o dist/css/theme-ntg.min.css --env production",
    "build:css:theme:central": "postcss src/themes/theme-central.css -o dist/css/theme-central.min.css --env production",
    "build:css:components": "postcss src/components.css -o dist/css/ntg-design-system-components.min.css --env production",
    "build:css": "npm run build:css:theme:ntg && npm run build:css:theme:central && npm run build:css:components",
    "build": "npm run build:js && npm run build:css",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "npm run build && storybook build -o ./docs",
    "deploy": "gh-pages -d docs"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.1.4",
    "@storybook/addon-docs": "^10.1.4",
    "@storybook/addon-vitest": "^10.1.4",
    "@storybook/react-vite": "^10.1.4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "gh-pages": "^6.3.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-preset-env": "^10.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "storybook": "^10.1.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.14"
  }
}
